{
	"name": "auth-worker",
	"version": "1.0.1",
	"description": "OAuth2 Service Worker handler",
	"main": "index.js",
	"scripts": {
		"build": "tsup src/index.ts src/worker.ts --dts --format esm,cjs --sourcemap && cp package.json dist",
		"lint": "eslint .",
		"dev": "nodemon -i example -i dist -e ts,tsx --exec \"npm run build:example\"",
		"build:example": "npm run build && cd example && rm -rf node_modules/auth-worker && npm install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/infinum/auth-worker.git"
	},
	"author": "Infinum JavaScript Team <hello@infinum.co>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/infinum/auth-worker/issues"
	},
	"homepage": "https://github.com/infinum/auth-worker#readme",
	"devDependencies": {
		"@infinumjs/eslint-config-core-ts": "^3.3.1",
		"@typescript-eslint/parser": "^5.48.1",
		"eslint": "^8.31.0",
		"lint-staged": "^13.1.0",
		"nodemon": "^2.0.20",
		"prettier": "^2.8.2",
		"tsup": "^6.5.0",
		"typescript": "^4.9.4"
	}
}
